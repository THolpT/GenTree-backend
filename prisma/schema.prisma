generator client {
  provider = "prisma-client"
  output   = "../src/generated"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Person {
  id          String   @id @default(cuid())
  name        String
  givenName   String?
  surname     String?
  gender      Gender?
  birthDate   DateTime?
  birthPlace  String?
  deathDate   DateTime?
  deathPlace  String?
  img         String?

  spouse      Person?  @relation("SpouseRelation", fields: [spouseId], references: [id])
  spouseId    String?  @unique
  spouseOf    Person?  @relation("SpouseRelation")

  child       Person?  @relation("ParentChildRelation", fields: [childId], references: [id])
  childId     String?
  parent      Person[]  @relation("ParentChildRelation")

  tree        Tree     @relation(fields: [treeId], references: [id])
  treeId      String
}

model User {
  id       String  @id @default(cuid())
  login    String
  password String
  trees    Tree[]
}

model Tree {
  id        String   @id @default(cuid())
  persons   Person[]
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  String?
}

enum Gender {
  MALE
  FEMALE
  UNKNOWN
}
